DEFINE INSTRUMENT BIFROST_secondary (
Mos=60,
which=0,
construction=0
)
DEPENDENCY " -DUSE_OFF "
DECLARE
%{
char focus_type[10];
double dm;
double width;
double height;
double mosaic;
%}

USERVARS %{
double flag;
int event_charge_left;
int event_charge_right;
double event_time;
int RING;
int FEN;
int TUBE;
%}

INITIALIZE
%{
width = 0.1;
height = 0.1;
mosaic = 60;
dm = 3.355;

if (focus_choice == 1) sprintf(focus_type,"parallel");
else if (focus_choice == 2) sprintf(focus_type, "point");
else if (focus_choice == 3) sprintf(focus_type, "exact");

%}
TRACE

COMPONENT Origin = Progress_bar() AT (0,0,0) ABSOLUTE
COMPONENT source = Source_simple(
yheight = 0.01, 
xwidth = 0.01, 
E0 = 5, 
dE = 4, 
flux = 1e9, 
dist = 1, 
focus_xw = height, 
focus_yh = width
)
AT (0,0,0) RELATIVE Origin
COMPONENT MonochromatorPoint = Arm() AT (0,0,1) RELATIVE PREVIOUS
COMPONENT Reorientation = Arm() AT (0,0,0) RELATIVE PREVIOUS ROTATED (0,0,90) RELATIVE PREVIOUS

COMPONENT Rowland = Monochromator_Rowland(
  NH = 1, zwidth = width, yheight = height, mosaic = mosaic, DM = dm, gap=0.002,
  show_construction=construction, focush=focus_type, RH=focus_radius, angle_h=4,
  source="Origin", sink="Focus"
)
WHEN (which == 0) AT (0, 0, 0) RELATIVE Reorientation ROTATED (0, -80, 0) RELATIVE Reorientation

COMPONENT Flat = Monochromator_flat(
  zwidth = width, yheight = height, mosaich = mosaic, mosaicv = mosaic, DM = dm
)
WHEN (which == 1) AT (0, 0, 0) RELATIVE Reorientation ROTATED (0, -80, 0) RELATIVE Reorientation

COMPONENT Curved = Monochromator_curved(
  NH=1, NV=1, zwidth = width, yheight = height, mosaic = mosaic, DM = dm
)
WHEN (which == 2) AT (0, 0, 0) RELATIVE Reorientation ROTATED (0, -80, 0) RELATIVE Reorientation

COMPONENT DetectorArm = Arm() AT (0,0,0) RELATIVE Reorientation ROTATED (0, -160, 0) RELATIVE Reorientation
COMPONENT Focus = Arm() AT (0, 0, 1) RELATIVE PREVIOUS
COMPONENT Detector = PSD_monitor(nx=140, ny=90, filename="psd.dat", restore_neutron=1, yheight=0.2, xwidth=0.2)
AT (0, 0, 0) RELATIVE PREVIOUS

FINALLY
%{
%}
END

